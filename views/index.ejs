            <input required class="form-control" type="text" id="phNumber" placeholder="Mobile Num e.g.: +14167229035" type="tel" />
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary form-control" id="submitOrderBtn">
              Confirm
            </button>
            <div class="form-group">
              <button type="button" class="btn btn-secondary form-control" data-bs-dismiss="modal" id="cancelOrderBtn">
                Cancel
